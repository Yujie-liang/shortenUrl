<form class="align-items-center mt-3" id="search-form" action="/submit" method="post">
  <div class="mb-3">
    <input type="url" class="form-control" name="url" id="link-input" placeholder="Input URL here"
      aria-label="Enter URL to shorten">
  </div>
  <div class="mb-3">
    <button type="submit" class="btn btn-primary" id="url-submit-button" aria-label="Shorten URL">Shorten</button>
  </div>
</form>